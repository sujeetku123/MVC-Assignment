@model List<MvcCrudOperation.Context.FootBallLeague>
@{
    ViewBag.Title = "FootballList";
}

<h2>FootballList</h2>

<table class="table table-hover" >
    <tr>
        <th>Id</th>
        <th>Team1</th>
        <th>Team2</th>
        <th>Match Status    </th>
        <th>Winning Team</th>
        <th>Points</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.MatchId</td>
                    <td>@item.TeamName1</td>
                    <td>@item.TeamName2</td>
                    <td>@item.MatchStatus</td>
                    <td>@item.WinningTeam</td>
                    <td>@item.Points</td>
                    <td>
                        <a href="@Url.Action("Football",new {item.MatchId,item.TeamName1,item.TeamName2,item.MatchStatus,item.WinningTeam,item.Points})" class="btn btn-success">Update</a>
                        <a href="@Url.Action("Delete",new { id=item.MatchId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
</table>